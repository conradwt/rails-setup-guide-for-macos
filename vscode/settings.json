// Place your settings in this file to overwrite the default settings
{
  "editor.copyWithSyntaxHighlighting": false,
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 5,
  "editor.detectIndentation": false,
  "editor.fontFamily": "'Fira Code', Monaco, Menlo, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontWeight": "400",
  "editor.formatOnSave": true,
  "editor.formatOnSaveTimeout": 1500,
  "editor.letterSpacing": 0.5,
  "editor.lineHeight": 25,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.tabSize": 2,
  "emmet.includeLanguages": {
    "erb": "html",
    "HTML (Eex)": "html",
    "javascript": "html"
  },
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "prettier.eslintIntegration": true,
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "misogi.ruby-rubocop"
  },
  "ruby.format": "rubocop",
  "ruby.rubocop.configFilePath": "",
  "ruby.rubocop.executePath": "/home/<ubuntu-username>/.rbenv/shims/",
  "ruby.rubocop.onSave": true,
  "sync.askGistName": false,
  "sync.autoDownload": false,
  "sync.autoUpload": false,
  "sync.forceDownload": false,
  "sync.forceUpload": false,
  "sync.host": "",
  "sync.pathPrefix": "",
  "sync.quietSync": true,
  "sync.removeExtensions": true,
  "sync.syncExtensions": true,
  "terminal.integrated.fontFamily": "'Fira Code', Monaco, Menlo, 'Courier New', monospace",
  "terminal.integrated.fontSize": 19,
  "terminal.integrated.shell.linux": "/usr/bin/zsh",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Cobalt2",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.sideBar.location": "right",
  "editor.wordWrap": "on",
  "prettier.singleQuote": true,
  "vscode_custom_css.imports": [
    "/mnt/c/Users/<windows-username>/.vscodestyles.css"
  ],
  "workbench.iconTheme": "material-icon-theme",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue"
}
